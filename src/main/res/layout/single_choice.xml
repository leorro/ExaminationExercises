<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/option"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                <Button
                        android:id="@+id/submit"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:background="@drawable/submit"
                        android:text="下一题"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingTop="20dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="30dp">

                <TextView
                        android:id="@+id/label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/label"
                        android:text="单选题"
                        android:textColor="#fff"
                        android:textSize="14dp" />

                <TextView
                        android:id="@+id/topicTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="5dp"
                        android:text="\t\t\t\t\t\t\t\t\t\t\t人们常常把软件工程的方法（开发方法）、工具（支持方法的工具）、（）称为软件工程三要素。"
                        android:textSize="24dp" />

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/topic"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">

                <LinearLayout
                        android:id="@+id/optionWrap1"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="160dp">

                    <Button
                            android:id="@+id/button1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="top"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/option_default"
                            android:text="A"
                            android:textColor="#666"
                            android:textSize="20dp" />

                    <TextView
                            android:id="@+id/option1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lineSpacingExtra="4sp"
                            android:text="程序"
                            android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/optionWrap2"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/optionWrap1"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="160dp">

                    <Button
                            android:id="@+id/button2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="top"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/option_default"
                            android:text="B"
                            android:textColor="#666"
                            android:textSize="20dp" />

                    <TextView
                            android:id="@+id/option2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lineSpacingExtra="4sp"
                            android:text="质量"
                            android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/optionWrap3"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/optionWrap2"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="160dp">

                    <Button
                            android:id="@+id/button3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="top"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/option_default"
                            android:text="C"
                            android:textColor="#666"
                            android:textSize="20dp" />

                    <TextView
                            android:id="@+id/option3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lineSpacingExtra="4sp"
                            android:text="人员"
                            android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/optionWrap4"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/optionWrap3"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="25dp"
                        tools:layout_editor_absoluteY="160dp">

                    <Button
                            android:id="@+id/button4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="top"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/option_default"
                            android:text="D"
                            android:textColor="#666"
                            android:textSize="20dp" />

                    <TextView
                            android:id="@+id/option4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:lineSpacingExtra="4sp"
                            android:text="过程"
                            android:textSize="20dp" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>